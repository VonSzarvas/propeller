CON  _CLKMODE = XTAL1 + PLL16X  _XINFREQ = 5_000_000'===============< Precalculated Delay Times >=================  Clock         = 80_000_000       '5Mhz Crystal   ms200         = Clock / 5         ms100         = Clock / 10'======< Lite Assignments >============  Lite1On            = %00000001  Lite2On            = %00000010  Lite3On            = %00000100  Lite4On            = %00001000  Lite5On            = %00010000  Lite6On            = %00100000  Lite7On            = %01000000  Lite8On            = %10000000  Lite1Off           = %11111110  Lite2Off           = %11111101  Lite3Off           = %11111011  Lite4Off           = %11110111  Lite5Off           = %11101111  Lite6Off           = %11011111  Lite7Off           = %10111111  Lite8Off           = %01111111  #0,Led1,Led2,Led3,Led4,Led5,Led6,Led7,Led8Var  byte LBytePub Start    dira[16..23]~~    LByte := 0    AllOffPub ShowByte(N)            '0<= N <= 255   LByte := ((n <# 255) #> 0)   Outa[16..23] := LBytePub AllOn   LByte |= %11111111   shiftout(LByte)Pub AllOff   LByte &= %00000000   shiftout(LByte)PUB FlashAll   AllOn   Waitcnt(ms100+cnt)   AllOff   waitcnt(ms100+cnt)PUB OneOn(N)   case N      Led1:         LByte |= Lite1On      Led2 :         LByte |= Lite2On      Led3 :         LByte |= Lite3On      Led4 :         LByte |= Lite4On      Led5:         LByte |= Lite5On      Led6 :         LByte |= Lite6On      Led7 :         LByte |= Lite7On      Led8 :         LByte |= Lite8On   shiftout(LByte)PUB OneOff(N)   case N      Led1:         LByte &= Lite1Off      Led2    :         LByte &= Lite2Off      Led3 :         LByte &= Lite3Off      Led4  :         LByte &= Lite4Off      Led5:         LByte &= Lite5Off      Led6    :         LByte &= Lite6Off      Led7 :         LByte &= Lite7Off      Led8  :         LByte &= Lite8Off   shiftout(LByte)Pub ToggleOne(N)   case N      Led1:         LByte ^= Lite1On      Led2    :         LByte ^= Lite2On      Led3 :         LByte ^= Lite3On      Led4  :         LByte ^= Lite4On      Led5:         LByte ^= Lite5On      Led6    :         LByte ^= Lite6On      Led7 :         LByte ^= Lite7On      Led8  :         LByte ^= Lite8On  shiftout(LByte)PUB FlashOne(N)   case N      Led1    :         OneOn(Led1)         waitcnt(ms100+cnt)         OneOff(Led1)      Led2    :         OneOn(Led2)         waitcnt(ms100+cnt)         OneOff(Led2)      Led3 :         OneOn(Led3)         waitcnt(ms100+cnt)         OneOff(Led3)      Led4  :         OneOn(Led4)         waitcnt(ms100+cnt)         OneOff(Led4)      Led5    :         OneOn(Led5)         waitcnt(ms100+cnt)         OneOff(Led5)      Led6    :         OneOn(Led6)         waitcnt(ms100+cnt)         OneOff(Led6)      Led7 :         OneOn(Led7)         waitcnt(ms100+cnt)         OneOff(Led7)      Led8  :         OneOn(Led8)         waitcnt(ms100+cnt)         OneOff(Led8)   shiftout(LByte)   waitcnt(ms100+cnt)          PUB ShiftR  | j         repeat j from 0 to 7         LByte := %10000000 -> j         shiftout(LByte)         waitcnt(ms100+cnt)            PUB ShiftL | j          repeat j from 0 to 7          LByte := %00000001 <- j          shiftout(LByte)          waitcnt(ms100+cnt)                Pub Alt1001     'Alternates 1001 0110 pattern    LByte := %10011001    shiftout(LByte)    Waitcnt(ms200+cnt)    Alloff    LByte := %01100110    shiftout(LByte)    waitcnt(ms200+cnt)    AlloffPub Alt1100      'Atlernates 1100 0011 pattern    LByte := %11001100    shiftout(LByte)    Waitcnt(ms200+cnt)    Alloff    LByte := %00110011    shiftout(LByte)    waitcnt(ms200+cnt)    AlloffPri shiftout(DataByte)   Outa[16..23] := DataByte